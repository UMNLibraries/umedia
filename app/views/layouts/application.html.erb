<!DOCTYPE html>
<html lang="en">
  <head>
    <title>UMedia</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    <%= javascript_pack_tag 'thumbnailer' %>
    <%= javascript_pack_tag 'details-toggle' %>
    <%= javascript_pack_tag 'google_events_tracking' %>
    <%= stylesheet_pack_tag 'slider' %>
    <link rel="shortcut icon" href="<%= image_path('favicon.ico') %>">
    <meta name="viewport" content="width=device-width">
  </head>

  <body class="umedia">
    <%= render '/shared/header' %>
    <div class="container" name="main" id="main">
      <%= yield %>
    </div>
    <%= render '/shared/footer' %>
    <%= render :partial => 'shared/blocking_js' %>
  </body>
</html>
