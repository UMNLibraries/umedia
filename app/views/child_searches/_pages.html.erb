  <% children.documents.each_with_index.map do |child, page| %>
      <%= render 'child_searches/page', child: child,
                                        page: page,
                                        highlighting: children.highlighting.fetch(child.id, {}),
                                        thumbnail: Umedia::Thumbnail.new(object_url: child.field_object.value,
                                                                        viewer_type: child.field_viewer_types.value.first,
                                                                        entry_id: child.field_kaltura_video.value) %>
  <% end %>
