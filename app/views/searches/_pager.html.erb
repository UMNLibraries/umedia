<% if pager.display? %>
  <nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="<%= !pager.previous? ? 'disabled' : '' %>">
          <%= link_to raw('<span aria-hidden="true">&laquo; Previous</span>'),
              query(search_params).merge(page: pager.previous_page),
              'aria-label': "Previous" %>
        </li>
        <li class="<%= !pager.next? ? 'disabled' : '' %>">
        <%= link_to raw('<span aria-hidden="true">Next &raquo;</span>'),
            query(search_params).merge(page: pager.next_page),
            'aria-label': "Next" %>
      </li>
      <% pager.pages.map do |page| %>
        <% if page == pager.marker %>
          <li class="disabled"><a href="#" onclick="return false;"><%= pager.marker %></a></li>
        <% else %>
          <li class="<%= pager.current_page == page ? 'active' : ''%>">
            <%= link_to page, query(search_params).merge(page: page)%>
          </li>
        <% end %>
      <% end %>
    </ul>
  </nav>
<% end %>