<li class="<%= !pager.previous? ? 'disabled' : '' %>">
  <%= link_to raw('<span aria-hidden="true">&laquo; Previous</span>'),
  query(search_params).merge(page: pager.previous_page),
  'aria-label': "Previous" %>
</li>
<li class="<%= !pager.next? ? 'disabled' : '' %>">
  <%= link_to raw('<span aria-hidden="true">Next &raquo;</span>'),
  query(search_params).merge(page: pager.next_page),
  'aria-label': "Next" %>
</li>