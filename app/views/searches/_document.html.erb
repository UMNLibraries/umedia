<% cache doc do %>
  <a name="<%= doc.id %>"></a>
  <div class="card-panel panel panel-default">
      <% title_icon_class = 'icon-docs' if doc.field_page_count.value && doc.field_page_count.value > 1 %>
      <div class="panel-body">
      <%= link_to doc.field_title.value,  item_path(doc.id, search_params), class: "#{title_icon_class} col-md-12" %>
      <dl class="document-metadata dl-horizontal dl-invert col-md-10">
        <%= render 'index_field', field: doc.field_description, truncated: true %>
        <%= render 'index_field', field: doc.field_creator, truncated: false %>
        <%= render 'index_field', field: doc.field_contributor, truncated: false %>
        <%= render 'index_field', field: doc.field_date_created_ss, truncated: false %>
        <%= render 'index_field', field: doc.field_contributing_organization, truncated: false %>
        <%= render 'index_field', truncated: false, field: doc.field_page_count if doc.field_page_count.value && doc.field_page_count.value > 1 %>
      </dl>
      <img src="<%= thumbnail.cdn_url %>"
        class="thumbnail col-md-2"
        alt="<%= doc.field_title.value %>"
        title="<%= doc.field_title.value %>"
        onerror="this.onerror=null;this.src=noThumbnail('<%= doc.id %>', '<%= thumbnail.url %>');" />
    </div>
  </div>
<% end %>