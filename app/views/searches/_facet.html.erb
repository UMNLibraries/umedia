<% if facet.display? %>
  <div class="panel panel-default">
    <div class="panel-heading"><%= heading %></div>
    <div class="panel-body">
      <ul>
      <% facet.each do |facet_row| %>
        <li><%= render 'facet_row',
                       facet_row: facet_row,
                       facet_link: facet_link(facet.name, facet_row.value, search_params) %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>