<% facit_list = facet_list(search: search, field: field, search_params: search_params) %>

<% if facit_list.length > 0 %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= label %></h3>
  </div>
  <div class="panel-body">
    <ul>
      <% facit_list.each do |facet, count| %>
        <li><%= render 'facet', facet: facet, count: count %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>