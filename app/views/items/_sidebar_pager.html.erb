<div class="umedia-pager" id="sidebar-pager"
  data-currentPage="<%= current_page %>"
  data-viewer-pageCount="<%= page_count %>">
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <li class="<%= false ? 'disabled' : '' %>">
        <%= link_to raw('<span aria-hidden="true">&laquo; Previous</span>'), item_path("#{item.collection}:#{item.id}"),
          'data-action': 'click->viewer#prevPage',
          class: 'btn btn-primary',
          role: 'button',
          id: 'sidebar-prev',
          'aria-label': "Previous" %>
      </li>
      <li class="<%= false ? 'disabled' : '' %>">
        <%= link_to raw('<span aria-hidden="true">Next &raquo;</span>'), item_path("#{item.collection}:#{item.id}"),
          'data-action': 'click->viewer#nextPage',
          class: 'btn btn-primary',
          role: 'button',
          id: 'sidebar-prev',
          'aria-label': "Next" %>
      </li>
    </ul>
  </nav>
</div>
