<div id="sidebar">
  <%= form_with url: '/child_search', class: 'child-search', method: :get, local: true do |f| %>
    <div class="input-group">
      <%= f.text_field :q,
          id: :q,
          value: params[:query],
          class: 'form-control',
          placeholder: 'Search Pages For...',
          'data-target': 'viewer.searchText',
          'data-action': 'onkeypress->viewer#returnSearch'
          %>
      <span class="input-group-btn">
        <%= f.button 'Search', class: 'btn btn-info', 'data-action': 'click->viewer#search' %>
      </span>
    </div>
      <% clear_active = (params[:query] && params[:query] != '') ? '' : 'hidden' %>
      <div class="clear-search <%= clear_active %>">
        <%= link_to 'Clear Search', item_path("#{item.collection}:#{item.id}"), class: 'btn btn-primary', role: 'button' %>
      </div>
  <% end %>

  <div class="col-md-12 sidebar-pages-and-slider">

    <% if (children.num_found > 3) %>
      <input type="text" id="sidebar-page-num" readonly>
    <% end %>

    <div class="col-md-2 sidebar-slider-horizontal">
      <div id="sidebar-slider-horizontal"></div>
    </div>

    <div class="col-md-10">
      <div class="list-group" id="sidebar-pages">
      </div>
    </div>

    <div class="col-md-2">
      <div id="sidebar-slider-vertical" title="Tip: Arrow Keys < > Allow Keyboard Navigation"></div>
    </div>

  </div>
</div>